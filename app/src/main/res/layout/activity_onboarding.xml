<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".screen.onboarding.OnboardingActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/text_skip_as_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_marginEnd="@dimen/dp_20"
        android:clickable="true"
        android:elevation="@dimen/dp_10"
        android:focusable="true"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/onboarding_skip_btn"
        android:textColor="@color/light_primary"
        android:textSize="@dimen/sp_16"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_next_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_32"
        android:elevation="@dimen/dp_4"
        android:background="@drawable/big_primary_btn_bg"
        android:fontFamily="@font/baloobhaina2_bold"
        android:text="@string/onboarding_next_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
