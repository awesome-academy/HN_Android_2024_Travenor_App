<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".screen.splash.SplashActivity">

    <ImageView
        android:id="@+id/image_launcher_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_200"
        android:maxHeight="@dimen/dp_200"
        android:importantForAccessibility="no"
        android:scaleType="center"
        android:src="@drawable/travenor_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloobhaina2_semibold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_42"
        app:layout_constraintBottom_toTopOf="@+id/text_author"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/text_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_author"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:fontFamily="@font/alexbrush_regular"
        android:textSize="@dimen/sp_24"
        android:layout_marginBottom="@dimen/dp_66"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
