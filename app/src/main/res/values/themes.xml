<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Androidtemplate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/action_color</item>
        <item name="android:textColor">@color/text_dark_color</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="Theme.Androidtemplate.TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="Theme.Androidtemplate.TextAppearance.Medium" parent="Theme.Androidtemplate.TextAppearance.Body">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Theme.Androidtemplate.TextAppearance.BoldBody" parent="Theme.Androidtemplate.TextAppearance.Body">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Theme.Androidtemplate.Popup" parent="android:style/Theme.Translucent">
        <!--No title        -->
        <item name="windowNoTitle">true</item>

        <!--Full screen        -->
        <item name="android:windowFullscreen">true</item>

        <!--Overlay content        -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="fontFamily">@font/roboto_medium</item>

        <item name="android:backgroundDimEnabled">true</item>

        <!--Hide soft keyboard if needed       -->
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <style name="Theme.Androidtemplate" parent="Base.Theme.Androidtemplate" />

</resources>
